<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBackground"
    tools:context=".fragments.ActivityFragment">

    <!-- TÍTULO -->
    <TextView
        android:id="@+id/txtTituloActividades"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Actividades"
        android:textSize="26sp"
        android:textStyle="bold"
        android:fontFamily="@font/roboto_slab_bold"
        android:textColor="@color/colorAccent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- BLOQUE SUPERIOR REDONDEADO -->
    <LinearLayout
        android:id="@+id/layoutFiltros"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorNeutralDark"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@+id/txtTituloActividades"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp">

        <EditText
            android:id="@+id/txtBuscar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:hint="Buscar actividades..."
            android:background="@drawable/bg_search"
            android:paddingHorizontal="12dp"
            android:drawableStart="@drawable/ic_search"
            android:drawablePadding="8dp"
            android:textColor="@color/colorTextOnDark"
            android:textColorHint="@color/colorNeutralLight"
            android:textSize="14sp"
            android:fontFamily="@font/nunito_regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:id="@+id/btnFiltroMateria"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/colorUniversityRed"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp">

                <TextView
                    android:id="@+id/txtFiltroMateria"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Todas las materias"
                    android:textColor="@color/colorTextOnDark"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito_regular" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:tint="@color/colorTextOnDark" />
            </LinearLayout>

            <Space
                android:layout_width="12dp"
                android:layout_height="match_parent" />

            <LinearLayout
                android:id="@+id/btnFiltroAntiguedad"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:background="@color/colorUniversityRedBright"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:paddingHorizontal="12dp">

                <TextView
                    android:id="@+id/txtFiltroAntiguedad"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Más reciente"
                    android:textColor="@color/colorTextOnDark"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito_regular" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_drop_down"
                    android:tint="@color/colorTextOnDark" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- LISTA DE ACTIVIDADES -->
    <ListView
        android:id="@+id/listActividades"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="24dp"
        android:background="@color/colorNeutralDark"
        android:padding="12dp"
        app:layout_constraintTop_toBottomOf="@+id/layoutFiltros"
        app:layout_constraintBottom_toTopOf="@+id/guidelineBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- guideline bottom para dejar espacio al bottom nav -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/dummyBottom"
        app:layout_constraintGuide_percent="0.92" />

    <View
        android:id="@+id/dummyBottom"
        android:layout_width="0dp"
        android:layout_height="72dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
