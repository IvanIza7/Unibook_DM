<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorBackground">

    <!-- Contenedor de fragments -->
    <FrameLayout
        android:id="@+id/fragmentContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/customBottomNav"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/customBottomNav"
        android:layout_width="0dp"
        android:layout_height="52dp"
        android:orientation="horizontal"
        android:background="#B7B7B7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/tabHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieHome"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                app:lottie_rawRes="@raw/animationhome"
                app:lottie_autoPlay="false"
                app:lottie_loop="false" />

            <View
                android:id="@+id/indicatorHome"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="top"
                android:background="@color/colorAccent"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/tabActividades"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieBook"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                app:lottie_rawRes="@raw/animationbook"
                app:lottie_autoPlay="false"
                app:lottie_loop="false" />

            <View
                android:id="@+id/indicatorBook"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="top"
                android:background="@color/colorAccent"
                android:visibility="gone" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/tabPerfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieUser"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center"
                app:lottie_rawRes="@raw/animationuser"
                app:lottie_autoPlay="false"
                app:lottie_loop="false" />

            <View
                android:id="@+id/indicatorUser"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="top"
                android:background="@color/colorAccent"
                android:visibility="gone" />
        </FrameLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
