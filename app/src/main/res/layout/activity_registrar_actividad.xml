<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/colorBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header con gradiente -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="24dp"
            android:background="@drawable/bg_header_gradiente">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_back"
                app:tint="@color/colorTextOnDark" />

            <TextView
                android:id="@+id/headerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo_registrar_materia"
                android:textSize="20sp"
                android:textColor="@color/colorTextOnDark"
                android:layout_marginStart="16dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Contenido -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <!-- Nombre materia -->
            <TextView
                android:id="@+id/tvNombreMateria"
                android:text="@string/nombre_de_la_materia"
                android:textColor="@color/colorTextOnDark"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputNombreMateria"
                    android:hint="@string/hint_nombre_materia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextOnDark"
                    android:textColorHint="@color/colorNeutralLight"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Nombre profesor -->
            <TextView
                android:id="@+id/tvNombreProfesor"
                android:layout_marginTop="14dp"
                android:text="@string/nombre_del_profesor_opcional"
                android:textColor="@color/colorTextOnDark"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputProfesor"
                    android:hint="@string/hint_nombre_profesor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextOnDark"
                    android:textColorHint="@color/colorNeutralLight"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Ãconos -->
            <TextView
                android:layout_marginTop="20dp"
                android:text="@string/icono"
                android:textColor="@color/colorTextOnDark"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/layoutIconos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:weightSum="7"
                android:padding="4dp"
                android:horizontalSpacing="8dp"> <!-- Horizontal spacing manual en cada item -->

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_card"
                    android:layout_marginEnd="8dp"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_book"
                        app:tint="@color/colorAccent" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_card"
                    android:layout_marginEnd="8dp"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_book"
                        app:tint="@color/colorAccent" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_card"
                    android:layout_marginEnd="8dp"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_book"
                        app:tint="@color/colorAccent" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_card"
                    android:layout_marginEnd="8dp"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_book"
                        app:tint="@color/colorAccent" />
                </FrameLayout>

                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:background="@drawable/bg_round_card"
                    android:layout_marginEnd="8dp"
                    android:padding="12dp">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_book"
                        app:tint="@color/colorAccent" />
                </FrameLayout>



            </LinearLayout>

            <!-- Colores -->
            <TextView
                android:layout_marginTop="20dp"
                android:text="@string/color"
                android:textColor="@color/colorTextOnDark"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Colores -->
            <LinearLayout
                android:id="@+id/layoutColores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:weightSum="7"
                android:padding="4dp">

                <View
                    android:id="@+id/color1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_round_card"
                    android:backgroundTint="#FF0000" />

                <View
                    android:id="@+id/color2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_round_card"
                    android:backgroundTint="#00FF00" />

                <View
                    android:id="@+id/color3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_round_card"
                    app:backgroundTint="@color/colorTextOnDark" />

                <View
                    android:id="@+id/color4"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_round_card"
                    app:backgroundTint="@color/colorAccent" />

                <View
                    android:id="@+id/color5"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_round_card"
                    app:backgroundTint="@color/colorAccent" />
            </LinearLayout>

            <!-- Vista previa -->
            <TextView
                android:text="@string/vista_previa"
                android:layout_marginTop="20dp"
                android:textColor="@color/colorTextOnDark"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:id="@+id/cardPreview"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:padding="16dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNeutralDark">

                <ImageView
                    android:id="@+id/previewIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_round_card"
                    app:backgroundTint="#00FF00"
                    android:padding="6dp"
                    android:src="@drawable/ic_book"
                    app:tint="@color/colorAccent" />

                <TextView
                    android:id="@+id/previewText"
                    android:text="@string/texto_preview_materia"
                    android:textColor="@color/colorTextOnDark"
                    android:textSize="16sp"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <Button
                android:id="@+id/btnGuardar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="@string/btn_guardar_materia"
                android:textColor="@color/colorTextOnDark"
                app:backgroundTint="@color/colorAccent" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
