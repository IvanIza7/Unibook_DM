<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAgregar"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/bg_header_gradiente"
            android:gravity="center_vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="24dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/ic_back"
                app:tint="@color/colorHeader" />

            <TextView
                android:id="@+id/txtMateria"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/titulo_agregar_materia"
                android:textColor="@color/colorHeader"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:id="@+id/txtNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_materia"
                android:textColor="@color/colorTextOnDark"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorCuadros"
                    android:hint="@string/hint_nombre_materia"
                    android:inputType="textCapWords"
                    android:textColor="@color/colorTextOnDark"
                    android:textColorHint="@color/colorNeutralLight" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/txtProfesor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="@string/nombre_profesor"
                android:textColor="@color/colorTextOnDark"
                android:textSize="14sp" />

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/inputProfesor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorCuadros"
                    android:hint="@string/hint_nombre_profesor"
                    android:inputType="textPersonName|textCapWords"
                    android:textColor="@color/colorTextOnDark"
                    android:textColorHint="@color/colorNeutralLight" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/txtIcono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/icono"
                android:textColor="@color/colorTextOnDark"
                android:textSize="14sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/icono"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/layoutIconos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <FrameLayout
                        android:id="@+id/iconOption1"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_round_card"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_book"
                            app:tint="@color/colorAccent" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/iconOption2"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_round_card"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_calculator"
                            app:tint="@color/colorAccent" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/iconOption3"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_round_card"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_science"
                            app:tint="@color/colorAccent" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/iconOption4"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_round_card"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_code"
                            app:tint="@color/colorAccent" />
                    </FrameLayout>

                    <FrameLayout
                        android:id="@+id/iconOption5"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_round_card"
                        android:padding="12dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_computer"
                            app:tint="@color/colorAccent" />
                    </FrameLayout>

                </LinearLayout>
            </HorizontalScrollView>


            <TextView
                android:id="@+id/txtColor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/color"
                android:textColor="@color/colorTextOnDark"
                android:textSize="14sp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/color"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/layoutColores"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/color1"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_round_card"
                        android:backgroundTint="#E8F5E9" />

                    <View
                        android:id="@+id/color2"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_round_card"
                        android:backgroundTint="#E3F2FD" />

                    <View
                        android:id="@+id/color3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_round_card"
                        android:backgroundTint="#FFF3E0" />

                    <View
                        android:id="@+id/color4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_round_card"
                        android:backgroundTint="#F3E5F5" />

                    <View
                        android:id="@+id/color5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_round_card"
                        android:backgroundTint="#E0F7FA" />

                    <View
                        android:id="@+id/color6"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_round_card"
                        android:backgroundTint="#FFF9C4" />

                    <View
                        android:id="@+id/color7"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginEnd="12dp"
                        android:background="@drawable/bg_round_card"
                        android:backgroundTint="#FFF9C4" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:id="@+id/txtPrevia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/vista_previa"
                android:textColor="@color/colorTextOnDark"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/cardPreview"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:background="@color/colorNeutralDark"
                android:orientation="horizontal"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/pvwIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_round_card"
                    android:backgroundTint="#4CAF50"
                    android:padding="6dp"
                    android:src="@drawable/ic_book"
                    app:tint="@color/colorAccent" />

                <TextView
                    android:id="@+id/txtMateriaPrevia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:text="@string/nombre_materia_titulo"
                    android:textColor="@color/colorTextOnDark"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnGuardarMateria"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="28dp"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/colorAccent"
                android:text="@string/btn_guardar_materia"
                android:textAllCaps="false"
                android:textColor="@color/colorHeader"
                android:textSize="16sp"
                app:cornerRadius="8dp"
                app:iconGravity="textStart"
                app:iconTint="@color/colorTextOnDark" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>