<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".PerfilActivity">

    <ScrollView
        android:id="@+id/scrollPerfil"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigation">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- HEADER -->
            <LinearLayout
                android:id="@+id/topContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorNeutralDark"
                android:padding="24dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtPerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Perfil"
                    android:textColor="@color/colorAccent"
                    android:textSize="26sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_slab_bold"/>

                <TextView
                    android:id="@+id/txtConfig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Configuración y ajustes"
                    android:textColor="@color/colorNeutralLight"
                    android:textSize="14sp"
                    android:fontFamily="@font/nunito_regular"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- ESTADÍSTICAS -->
            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estadísticas"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_slab_bold"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="8dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:layout_marginBottom="16dp"
                android:weightSum="2">

                <!-- CUADRO MATERIAS -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:layout_marginEnd="8dp"
                    android:padding="8dp"
                    app:cardBackgroundColor="@color/colorNeutralDark">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tvMateriasCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/colorAccent"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_slab_bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/tvMateriasLabel"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tvMateriasLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mis materias"
                            android:textColor="@color/colorTextOnDark"
                            android:textSize="16sp"
                            android:fontFamily="@font/nunito_regular"
                            app:layout_constraintTop_toBottomOf="@id/tvMateriasCount"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- CUADRO ACTIVIDADES -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    android:layout_marginStart="8dp"
                    android:padding="8dp"
                    app:cardBackgroundColor="@color/colorNeutralDark">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tvActividadesCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/colorAccent"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_slab_bold"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toTopOf="@+id/tvActividadesLabel"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"/>

                        <TextView
                            android:id="@+id/tvActividadesLabel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Actividades"
                            android:textColor="@color/colorTextOnDark"
                            android:textSize="16sp"
                            android:fontFamily="@font/nunito_regular"
                            app:layout_constraintTop_toBottomOf="@id/tvActividadesCount"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>


            <!-- APARIENCIA -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorNeutralDark"
                android:padding="16dp"
                android:layout_margin="16dp">

                <TextView
                    android:id="@+id/tvAparienciaTitle"
                    android:text="Apariencia"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_slab_bold"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/tvTemaClaro"
                    android:text="Tema Claro"
                    android:textColor="@color/colorTextOnDark"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_regular"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:id="@+id/tvTemaOscuro"
                    android:text="Tema Oscuro"
                    android:textColor="@color/colorTextOnDark"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_regular"
                    android:layout_marginBottom="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorNeutralLight"
                    android:layout_marginVertical="10dp" />
            </LinearLayout>

            <!-- INFORMACIÓN -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorNeutralDark"
                android:padding="16dp"
                android:layout_margin="16dp">

                <TextView
                    android:text="Información"
                    android:textColor="@color/colorAccent"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/roboto_slab_bold"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="Versión"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/colorTextOnDark"
                        android:textSize="16sp"
                        android:fontFamily="@font/nunito_regular"/>

                    <TextView
                        android:id="@+id/txtVersion"
                        android:text="1.0.0"
                        android:textColor="@color/colorTextOnDark"
                        android:textSize="16sp"
                        android:fontFamily="@font/nunito_regular"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvDesarrolladoresTitle"
                    android:text="Desarrollado por:"
                    android:textColor="@color/colorTextOnDark"
                    android:textSize="16sp"
                    android:fontFamily="@font/nunito_regular"
                    android:textStyle="bold"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"/>

                <TextView android:id="@+id/dev1" android:text="Nombre 1" android:textColor="@color/colorTextOnDark" android:textSize="14sp" android:fontFamily="@font/nunito_regular"/>
                <TextView android:id="@+id/dev2" android:text="Nombre 2" android:textColor="@color/colorTextOnDark" android:textSize="14sp" android:fontFamily="@font/nunito_regular"/>
                <TextView android:id="@+id/dev3" android:text="Nombre 3" android:textColor="@color/colorTextOnDark" android:textSize="14sp" android:fontFamily="@font/nunito_regular"/>
                <TextView android:id="@+id/dev4" android:text="Nombre 4" android:textColor="@color/colorTextOnDark" android:textSize="14sp" android:fontFamily="@font/nunito_regular"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="72dp"
        android:background="@color/colorNeutralDark"
        app:itemIconTint="@color/colorAccent"
        app:itemTextColor="@color/colorAccent"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
