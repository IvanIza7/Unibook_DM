<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.navify.unibook.fragments.PerfilFragment">

    <ScrollView
        android:id="@+id/scrollPerfil"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- HEADER -->
            <LinearLayout
                android:id="@+id/topContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorNeutralDark"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/txtPerfil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_slab_bold"
                    android:text="@string/titulo_perfil"
                    android:textColor="@color/colorAccent"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txtConfig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/nunito_regular"
                    android:text="@string/subtitulo_configuracion"
                    android:textColor="@color/colorNeutralLight"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Estadísticas CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/colorNeutralDark">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:text="@string/titulo_estadisticas"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Materias -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/containerMaterias"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/bg_round_card"
                            android:backgroundTint="@color/colorBackground">

                            <TextView
                                android:id="@+id/tvMateriasCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_slab_bold"
                                android:text="@string/cero"
                                android:textColor="@color/colorAccent"
                                android:textSize="40sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@id/tvMateriasLabel"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="packed"/>

                            <TextView
                                android:id="@+id/tvMateriasLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_regular"
                                android:text="@string/titulo_mis_materias"
                                android:textColor="@color/colorTextOnDark"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tvMateriasCount" />
                        </androidx.constraintlayout.widget.ConstraintLayout>

                        <!-- Actividades -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/containerActividades"
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:background="@drawable/bg_round_card"
                            android:backgroundTint="@color/colorBackground">

                            <TextView
                                android:id="@+id/tvActividadesCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_slab_bold"
                                android:text="@string/cero"
                                android:textColor="@color/colorAccent"
                                android:textSize="40sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toTopOf="@id/tvActividadesLabel"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintVertical_chainStyle="packed"/>

                            <TextView
                                android:id="@+id/tvActividadesLabel"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_regular"
                                android:text="@string/mis_actividades"
                                android:textColor="@color/colorTextOnDark"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toBottomOf="@id/tvActividadesCount" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Apariencia CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/colorNeutralDark">

                <LinearLayout
                    android:id="@+id/containerApariencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvAparienciaTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:text="@string/apariencia"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <!-- Contenedor de selección de temas -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="8dp">
                        
                        <!-- Opción Tema Claro -->
                        <LinearLayout
                            android:id="@+id/themeLightSelector"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginEnd="12dp"
                            android:background="?attr/selectableItemBackground"
                            android:padding="8dp">
                            
                            <FrameLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/bg_theme_light_gradient"
                                android:layout_marginBottom="8dp">

                                <ImageView
                                    android:id="@+id/ivCheckLight"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_check"
                                    app:tint="@color/colorAccent"
                                    android:background="@drawable/bg_round_card"
                                    android:backgroundTint="@color/colorBackground"
                                    android:padding="6dp"
                                    android:layout_gravity="center"
                                    android:visibility="invisible"/>
                            </FrameLayout>
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tema_claro"
                                android:textColor="@color/colorTextOnDark"
                                android:textSize="14sp"
                                android:fontFamily="@font/nunito_regular"/>
                        </LinearLayout>
                        
                        <!-- Opción Tema Oscuro -->
                        <LinearLayout
                            android:id="@+id/themeDarkSelector"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginStart="12dp"
                            android:background="?attr/selectableItemBackground"
                            android:padding="8dp">
                            
                            <FrameLayout
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:background="@drawable/bg_theme_dark_gradient"
                                android:layout_marginBottom="8dp">

                                <ImageView
                                    android:id="@+id/ivCheckDark"
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:src="@drawable/ic_check"
                                    app:tint="@color/colorAccent"
                                    android:background="@drawable/bg_round_card"
                                    android:backgroundTint="@color/colorBackground"
                                    android:padding="6dp"
                                    android:layout_gravity="center"
                                    android:visibility="invisible"/>
                            </FrameLayout>
                                
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tema_oscuro"
                                android:textColor="@color/colorTextOnDark"
                                android:textSize="14sp"
                                android:fontFamily="@font/nunito_regular"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Información CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/colorNeutralDark">
            
                <LinearLayout
                    android:id="@+id/containerInformacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:text="@string/titulo_informacion"
                        android:textColor="@color/colorAccent"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/nunito_regular"
                            android:text="@string/version_app"
                            android:textColor="@color/colorTextOnDark"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/txtVersion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_regular"
                            android:text="@string/num_version"
                            android:textColor="@color/colorTextOnDark"
                            android:textSize="16sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvDesarrolladoresTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/nunito_regular"
                        android:text="@string/desarrollado_por"
                        android:textColor="@color/colorTextOnDark"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/dev1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="@string/autor1"
                        android:textColor="@color/colorTextOnDark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/dev2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="@string/autor2"
                        android:textColor="@color/colorTextOnDark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/dev3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="@string/autor3"
                        android:textColor="@color/colorTextOnDark"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/dev4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_regular"
                        android:text="@string/autor4"
                        android:textColor="@color/colorTextOnDark"
                        android:textSize="14sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- ZONA DE PELIGRO CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FEF2F2">
            
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/roboto_slab_bold"
                        android:text="@string/zona_peligro"
                        android:textColor="#B91C1C"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:fontFamily="@font/nunito_regular"
                        android:text="@string/eliminar_datos_permanente"
                        android:textColor="#7F1D1D"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEliminarDatos"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:text="@string/btn_eliminar_todos_datos"
                        android:textColor="#FFFFFF"
                        android:textSize="14sp"
                        app:cornerRadius="8dp"
                        android:backgroundTint="#EF4444"
                        app:elevation="0dp"/>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>